<div class="row justify-content-center mb-3">
  <h3 class="text-center">New Team Members (0-7 Days)</h3>
  <!-- PUT LOGIC TO SEE  IF THERE ARE EMPLOYEES THAT FIT EACH CATEGORY -->
  <% @store.users.first_week.each do |new_hire| %>
    <div class="col-6 col-md-3 col-lg-2">
      <% if current_user.position.name.in? (["General Manager", "Supervisor", "Operations Manager", "Director"]) %>
        <%= link_to new_hire.full_name, new_hire, class: "table-link" %>
      <% else %>
        <%= new_hire.full_name.titleize %>
      <% end %>
    </div>
  <% end %>
</div>
