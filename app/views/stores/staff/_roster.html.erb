<div class="row justify-content-center mb-2">
  <h3 class="text-center">Team Members</h3>
  <% @store.users.where(position_id: 26).each do |member| %>
    <div class="col-6 col-md-3 col-lg-2">
      <% if current_user.position.name.in? (["General Manager", "Supervisor", "Operations Manager", "Director", "Training Manager", "Training Assistant"]) %>
        <%= link_to "#{member.full_name.titleize}#{member.food_handler_card ? "" : "*"}", member, class: "table-link" %>
      <% else %>
        <%= "#{member.full_name.titleize}#{member.food_handler_card ? "" : "*"}" %>
      <% end %>
    </div>
  <% end %>
  <hr class="mt-3" >
  <small>* Missing Food Handler/Servsafe Card</small>
</div>