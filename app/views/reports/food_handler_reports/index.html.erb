<div class="card card-body">
  <div class="row justify-content-center mb-5">
    <% if @food_handler_cards %>
      <% @food_handler_cards.each do |card| %>
        <div class="col-12 col-md-6 col-lg-4">
          <p><%= card.store.number %> - <%= card.user.full_name %> Exp: <%= card.expiration_date.strftime("%m/%d/%Y")%></p>
        </div>
      <% end %>
    <% else %>
      <% @users.each do |user| %>
        <div class="col-6 col-md-4 col-lg-3">
          <p><%= user.stores[0].number %> <%= user.full_name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>