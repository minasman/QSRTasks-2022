<div class="row justify-content-center mb-5">
  <div class="col">
    <div class="card">
      <h2 class="text-center card-header">Food Handler/ServSafe Card Report</h2>
      <div class="card-body">
        <%= form_tag("/food_handler_reports", method: "get") do %>
          <h2 class='card-title'>Search By: </h2>
          <h5 class="text-center font-italic">Choose Only One Search Option</h5>
          <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-3">
              <div class="mb-3">
                <%= label_tag(:organization, "All Stores") %>
                <%= check_box_tag :organization, "true", false, :class => "form-check-input" %>
              </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-3">
              <div class="mb-3">
                <%= label_tag(:store_id, "Restaurant") %>
                <%= collection_select(:searchData, :store_id, Store.where(active: true, store_type: "Traditional").order('number ASC'), :id, :number, {include_blank: true}, {:class => "form-control"}) %>
              </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-3">
              <div class="mb-3">
                <%= label_tag(:supervisor_id, "Supervisor") %>
                <%= collection_select(:searchData, :supervisor_id, User.where(position_id: "4").order('first_name ASC'), :id, :full_name, {include_blank: true}, {:class => "form-control"}) %>
              </div>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-3">
              <div class="mb-3">
                <%= label_tag(:om_id, "Operations Manager") %>
                <%= collection_select(:searchData, :om_id, User.where(position_id: "2"), :id, :full_name, {include_blank: true}, {:class => "form-control"}) %>
              </div>
            </div>
          </div>
          <hr>
          <h2>Select Type of Report:</h2>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:type, "list", false, :class => "form-check-input") %> List
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:type, "expiration", false, :class => "form-check-input") %> Expiring
          </div>
          <div class="form-check form-check-inline">
            <%= radio_button_tag(:type, "missing", false, :class => "form-check-input") %> Missing
          </div>
          <hr>

          <div class="row">
            <div class="col-12 col-md-3">
              <div class='d-grid gap-2'>
                <%= submit_tag 'Find', class: "btn my-submit" %>
              </div>
            </div>
            <div class="col-12 col-md-3 pt-2 pt-md-0">
              <div class='d-grid gap-2'>
                <%= link_to "Dashboard", dashboard_path, class: "btn my-submit" %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>