<div class="card mb-5">
  <h2 class="card-header text-center">Documentation List</h2>
  <% if @documentations.any? %>
    <%= form_with url: "",  method: :get, data: { turbo_frame: "documents", turbo_action: "advance", controller: "form", action: "input->form#submit" }, class: "pb-3" do |form| %>
      <div class="pt-3 row justify-content-between">
        <div class="col-12 col-md-5 col-xl-2 ms-3">
          <div class="row">
            <%= form.label "Show", class: "col-4 mb-3 col-form-label" %>
            <div class="col-7">
              <%= form.select :count, options_for_select([10, 25, 50], selected: params[:count]), {}, { onchange: "this.form.requestSubmit()", class: "form-control", placeholder: "Show"}  %>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-4  me-3">
          <%= form.search_field :query, value: params[:query], class: "form-control", placeholder: "Search By Name" %>
        </div>
      </div>
    <% end %>
    <div class="table-responsive card-body">
      <%= turbo_frame_tag "documents" do %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Location</th>
              <th scope="col"><%= sort_link_to "Name", :full_name, data: {turbo_action: "advance" }, class: "table-link" %></th>
              <th scope="col">Position</th>
              <th scope="col">Type</th>
              <th scope="col">Level</th>
              <th scope="col">Details</th>
              <th scope="col">Awarded By</th>
              <th scope="col">Points</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @documentations.each_with_index do |documentation, i| %>
              <tr id="<%= dom_id(documentation) %>" >
                <th scope="row"><%= i + 1 %></th>
                <td><%= documentation.store.number %></td>
                <td><%= link_to documentation.employee_named.full_name, documentation.employee_named, class: "table-link", data: {turbo: false} %></td>
                <td><%= documentation.position.name %></td>
                <td><%= documentation.documentation_type %></td>
                <td><%= documentation.level %></td>
                <td><%= documentation.description %></td>
                <td><%= link_to documentation.awarded_by.full_name, documentation.awarded_by, class: "table-link", data: {turbo: false} %></td>
                <td><%= documentation.points %></td>
                <td>
                  <% if policy(:documentation).show? %>
                    <%= link_to "Show", documentation, class: "px-2 table-link", data: {turbo: false} %> |
                  <% end %>
                  <% if policy(:documentation).edit? %>
                    <%= link_to "Edit", edit_documentation_path(documentation), class: "px-2 table-link", data: { turbo: false } %>
                  <% end %>
                  <% if policy(:documentation).destroy? %>
                    | <%= link_to "Remove", documentation, class: "px-2 table-link", data: { turbo_method: :delete, turbo_confirm: "You Are About To Remove Documentation For #{documentation.employee_named.full_name.titleize} generated by #{documentation.awarded_by.full_name.titleize}!" } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="p-4">
          <%== pagy_nav @pagy %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card-body">
      <h3 class="text-center">No Documentation ðŸ˜€</h3>
    </div>
  <% end %>

</div>