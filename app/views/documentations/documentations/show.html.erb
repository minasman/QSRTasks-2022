<div class="card mb-5">
  <h2 class="text-center card-header"><%= @documentation.level %> <%= @documentation.documentation_type %> for <%= @documentation.employee_named.full_name %></h2>
  <div class="card-body">
    <%= render @documentation %>
    <div class="d-grid gap-2 d-md-flex">
      <%= link_to "Edit", edit_documentation_path(@documentation), class: "btn my-submit" %>
      <%= link_to "Documentations", documentations_path, class: "btn my-submit" %>
    </div>
  </div>
  <% if policy(:documentation).destroy? %>
    <div class="card-footer">
      <%= link_to "Remove", @documentation, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "You Are About To Remove Documentation For #{@documentation.employee_named.full_name.titleize} generated by #{@documentation.awarded_by.full_name.titleize}!" } %>
    </div>
  <% end %>
</div>
