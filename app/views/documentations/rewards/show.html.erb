<div class="row justify-content-center">
  <div class="col-auto">
    <div class="card">
      <h2 class="text-center card-header"><%= @reward.name %></h2>
      <div class="card-body">
        <h4 class="text-center">The value of this reward is <%= @reward.value %> points </h4>
        <div class="d-grid gap-2 d-md-flex mt-4">
          <% if policy(:reward).edit? %>
            <%= link_to "Edit", edit_reward_path(@reward), class: "btn my-submit" %>
          <% end %>
          <%= link_to "Back", rewards_path, class: "btn my-submit" %>
        </div>
      </div>
    </div>
  </div>
</div>
