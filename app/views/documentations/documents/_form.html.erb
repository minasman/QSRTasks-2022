<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :documentation_type, "Document Type", class: "form-label" %>
    <%= form.select :documentation_type, Document::DOCUMENT_TYPE, {:include_blank => "Select Type"}, {class: "form-control", required: true }  %>
  </div>

  <div class="mb-3">
    <%= form.label :documentation_class, "Document Class", class: "form-label" %>
    <%= form.select :documentation_class, Document::DOCUMENT_CLASS, {:include_blank => "Select Type"}, {class: "form-control", required: true }  %>
  </div>

  <div class="mb-3">
    <%= form.label :level, "Document Level", class: "form-label" %>
    <%= form.text_field :level %>
  </div>

  <div class="mb-3">
    <%= form.label :definition, class: "form-label" %>
    <%= form.text_area :definition, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :points, class: "form-label" %>
    <%= form.number_field :points, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn my-submit"  %>
  </div>
<% end %>
