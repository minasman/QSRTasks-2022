<div class="card">
  <div class="card-header">
    <h2 class="text-center"><%= @guest.full_name %></h2>
    <h3 class="text-center"><%= number_to_phone(@guest.phone) %> | <%= @guest.email %></h3>
  </div>
  <div class="card-body">
    <h4>Restaurants Visited</h4>
    <div class="row justify-content-center">
      <% @guest.stores.uniq.each do |store| %>
        <div class="col-12 col-md-4">
          <h6 class="text-center"><%= store.number %></h6>
          <div class="row justify-content-between">
            <% store.comments.where(guest_id: @guest).order(visit_date: :asc).each do |comment| %>
              <div class="col-6 col-lg-4 mb-2">
                <%= link_to comment.case_number, comment, class: "btn my-submit" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>